FROM golang:alpine as build
ENV PACKAGEPATH=github.com/ligato/networkservicemesh/
COPY [".","/go/src/${PACKAGEPATH}"]
WORKDIR /go/src/${PACKAGEPATH}/
RUN CGO_ENABLED=0 GOOS=linux go build  -a -o /go/bin/nsm-vpp-dataplane dataplanes/vpp/cmd/nsm-vpp-dataplane.go

FROM alpine as runtime
COPY --from=build /go/bin/nsm-vpp-dataplane /bin/nsm-vpp-dataplane
ENTRYPOINT ["/bin/nsm-vpp-dataplane"]

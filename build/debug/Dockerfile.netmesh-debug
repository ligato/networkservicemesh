FROM networkservicemesh/debug

# Build component
RUN CGO_ENABLED=0 GOOS=linux go build -i -gcflags "all=-N -l" -ldflags '-extldflags "-static"' -o /go/bin/netmesh ./cmd/netmesh/main.go
# Debug entry point
CMD ["/go/bin/dlv", "--listen=:40000", "--headless=true", "--api-version=2", "exec", "/go/bin/netmesh"]
